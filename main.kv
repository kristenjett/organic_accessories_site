<DefaultState>:
# Everything inside this widget will be displayed permanently while the app is running
    id: 0
    rows:2
    FloatLayout:
        orientation: "vertical"
        Label:
            pos_hint: {"x":0, "top":1}
            id: app_intro
            size_hint: 1,0.2
            text_size: 0.8*self.width, None
            halign: 'center'
            valign: 'middle'
            text: 'This app will allow you update the organic_accessories.com website by adding or removing posts from the website. For further changes, or any issues with the functionality of the app or website, please contact Sam Jett at samjett247@gmail.com.'

        ToggleButton:
            pos_hint: {"x":0, "top":0.8}
            size_hint: 0.5,0.1
            group: "Site_Type_Group"
            text: 'Add Post to Website'
            on_press: root.add_post()
        ToggleButton:
            pos_hint: {"x":0.5, "top":0.8}
            size_hint: 0.5,0.1
            group: "Site_Type_Group"
            text: 'Remove Post from Website'
            on_press: root.remove_post()

<AddPost>:
# This widget will be rendered if the Add Post to Website toggle button is pressed
    id: 1
    display: display
    rows: 4
    FloatLayout:
        Label:
            pos_hint: {"x":0.25, "top":0.67}
            size_hint: 0.5, 0.05
            text_size: 1.6*self.width, None
            text: 'A. Enter in the name of the image file for the new post. Make sure the image file is in your Desktop, and include a file ending if shown (for example, .jpg or .png)'

        TextInput:
            pos_hint: {"x":0.1, "top":0.58}
            size_hint: 0.8, 0.05
            id: path_to_image
            text: ''

        Label:
            # Positioning details
            pos_hint: {"x":0.1, "top":0.51}
            size_hint: 0.8, 0.08
            text_size: 0.8*self.width, None
            halign: 'center'
            valign: 'middle'
            text: "B. Enter the name of the new post you would like to put on the website (For example, 'Volcano Candles' or 'Corkcicle Bottles') in the box below"

        TextInput:
            # Positioning details
            pos_hint: {"x":0.3, "top":0.41}
            size_hint: 0.4, 0.06
            id: new_post_name

        Label:
            # Positioning details
            pos_hint: {"x":0.1, "top":0.33}
            size_hint: 0.8, 0.08
            text_size: 0.8*self.width, None
            halign: 'center'
            valign: 'middle'
            text: "C. Enter a short blurb about the post you would like to put on the website in the box below"
            
        TextInput:
            # Positioning details
            pos_hint: {"x":0.1, "top":0.24}
            size_hint: 0.8, 0.08
            id: post_blurb

        UpdateWebsite:
            pos_hint: {"x":.35, "top":0.12}
            size_hint: 0.3, 0.08
            text: 'D. Press this to update the website'
            on_release: root.update_website()

        Label:
            pos_hint: {"x":0, "top":0.12}
            size_hint: 1, 0.1
            id: display
            font_size: dp(50)
            text: ''

<RemovePost>:
# This widget will be rendered if the Add Post to Website toggle button is pressed
    # id: rmpost
    display: display
    rows: 4
    FloatLayout:
        Label:
            pos_hint: {"x":0.2, "top":0.65}
            size_hint: 0.6, 0.04
            text: 'A. Read through the following list of posts currently on your website and pick out which one you want to remove.'

        Label:
        # This label will be modified by the posts currently on the website. The backend logic to fill it is contained within 
            id: postlistlbl
            pos_hint: {"x":0.1, "top":0.56}
            size_hint: 0.8, 0.2
            text_size: self.width, None
            # halign: 'center'
            # valign: 'middle'
            text: 'Error in collecting the current posts'


        Label:
            # Positioning details
            pos_hint: {"x":0.1, "top":0.33}
            size_hint: 0.8, 0.08
            text_size: 0.8*self.width, None
            halign: 'center'
            valign: 'middle'
            text: "B. Type in the number of the post that you want to delete from the above list"

        TextInput:
            # Positioning details
            pos_hint: {"x":0.4, "top":0.24}
            size_hint: 0.2, 0.08
            id: rm_post_id

        UpdateWebsite:
            pos_hint: {"x":.35, "top":0.12}
            size_hint: 0.3, 0.08
            text: 'C. Press this to update the website'
            on_release: root.update_website()

        Label:
            pos_hint: {"x":0, "top":0.12}
            size_hint: 1, 0.1
            id: display
            font_size: dp(50)
            text: ''

<Success>:
# This widget will be rendered if the process completed successfully

